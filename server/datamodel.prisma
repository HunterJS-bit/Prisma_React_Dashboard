enum Role {
  ADMIN
  MEMBER
  CONSTRIBUTOR
}

type User {
  id: ID! @id
  name: String! @unique
  email: String! @unique
  password: String!
  posts: [Post!]!
  role: Role @default(value: MEMBER)
}

type Post {
  id: ID! @id
  title: String
  excerpt: String
  content: Json
  isPublished: Boolean @default(value: false)
  author: User! @relation(link: INLINE)
  comments: [Comment!]!
}

type File {
  id: ID! @id
  name: String!
  size: Int!
  contentType: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  url: String! @unique
}

type Comment {
  id: ID! @id
  author: String!
  content: String!
  post: Post! @relation(link: INLINE)
}

type Mushroom {
  id: ID! @id,
  name: String,
  type: Boolean,
  info: String,
}